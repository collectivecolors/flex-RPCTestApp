<?xml version="1.0" encoding="utf-8"?>
<ApplicationClass xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="application.*" layout="absolute" focusEnabled="true" width="788" height="315">

<!-- Reusable inline Item Renderer -->
<mx:Component id="MessageRenderer">
  <mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100" borderStyle="none" horizontalScrollPolicy="off" verticalScrollPolicy="off">
  <mx:HRule x="0" y="0" width="100%"/>
	<mx:HBox x="0" y="0" width="100%" horizontalGap="0">
		<mx:Label id="user" text="{data.title}" width="55%" textAlign="center" height="18" paddingTop="0" paddingBottom="0"  fontWeight="bold" fontSize="13"/>
		<mx:Label text="-" width="5%" textAlign="center" height="18" paddingBottom="0" paddingTop="0"  fontWeight="bold" fontSize="13"/>
		<mx:Label id="time" text="{data.dateCreated}" width="40%" textAlign="center" height="18"  paddingBottom="0" paddingTop="0"  fontWeight="bold" fontSize="14"/>
	</mx:HBox>
	<mx:HRule x="0" y="18" width="100%"/>
	<mx:TextArea id="message" x="0" y="16" width="100%" height="80" htmlText="{data.teaser}" editable="false" borderStyle="none" wordWrap="true" verticalScrollPolicy="off" selectable="false" backgroundAlpha="0" horizontalScrollPolicy="off"/>				
</mx:Canvas>
</mx:Component>
<mx:HBox width="97%" horizontalAlign="center" verticalAlign="middle" height="97%" horizontalCenter="0" verticalCenter="0">
	<mx:List x="0" y="149" height="100%" backgroundColor="#E2E0FF" borderThickness="2" borderColor="#FFFFFF" themeColor="#FFFFFF" borderStyle="solid" cornerRadius="5"></mx:List>
	<mx:List width="100%" height="100%" id="lstBlogs" verticalScrollBarStyleName="listStyle" itemRenderer="{MessageRenderer}" useRollOver="false" cornerRadius="5" focusEnabled="false" verticalScrollPolicy="off" backgroundColor="#E2E0FF" borderThickness="2" borderStyle="solid" borderColor="#FFFFFF" themeColor="#FFFFFF"></mx:List>
	</mx:HBox>
</ApplicationClass>